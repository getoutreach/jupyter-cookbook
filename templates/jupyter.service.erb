[Unit]
Description=Jupyter Notebook

[Service]
Type=simple
PIDFile=/run/jupyter-<%= @service_name %>.pid
# Step 1 and Step 2 details are here..
# ------------------------------------
Environment="JUPYTER_PATH=<%= @working_dir %>"
Environment="JUPITER_RUNTIME_DIR=<%= @working_dir %>"
ExecStart=/usr/local/bin/jupyter-notebook --no-browser --notebook-dir=<%= @working_dir %>
User=<%= @group %>
Group=<%= @user %>
WorkingDirectory=<%= @working_dir %>
Restart=always
RestartSec=10
#KillMode=mixed

[Install]
WantedBy=multi-user.target
